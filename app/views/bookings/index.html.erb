<% if current_user %>
<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Room</th>
      <th>Date</th>
      <th>Timefrom</th>
      <th>Timeto</th>
      <th>Members</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user_id %></td>
        <td><%= booking.room_id %></td>
        <td><%= booking.date %></td>
        <td><%= booking.timefrom %></td>
        <td><%= booking.timeto %></td>
        <td><%= booking.members %></td>
        <td><%= link_to 'Cancel', booking, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', rooms_path %>
<% end %>